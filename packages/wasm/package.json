{
	"name": "@shotoku-zei/wasm",
	"version": "0.1.0",
	"files": [
		"pkg"
	],
	"main": "pkg/shotoku_zei_wasm.js",
	"types": "pkg/shotoku_zei_wasm.d.ts",
	"scripts": {
		"dev": "cd ../.. && cargo watch -i 'packages/wasm/pkg/*' -s 'wasm-pack build --target bundler --out-dir packages/wasm/pkg crates/shotoku-zei-wasm'",
		"build": "wasm-pack build --target bundler --out-dir pkg ../../crates/shotoku-zei-wasm",
		"build:node": "wasm-pack build --target nodejs --out-dir pkg-node ../../crates/shotoku-zei-wasm",
		"build:web": "wasm-pack build --target web --out-dir pkg ../../crates/shotoku-zei-wasm",
		"lint": "echo 'Rust project - no lint needed'",
		"test": "cargo test"
	}
}
