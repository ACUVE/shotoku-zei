{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"compilerOptions": {
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"target": "ES2017",
		"module": "ESNext",
		"jsx": "preserve",
		"moduleResolution": "bundler",
		"plugins": [{ "name": "next" }],
		"noEmit": true,
		"allowJs": true
	},
	"include": ["src", "next-env.d.ts"],
	"exclude": ["node_modules"]
}
